cd $PBS_O_WORKDIR

ml icc
ml openmpi
mkdir -p output

# Run MPI program
mpiexec ./mpi_hello_world >./output/mpi_${PBS_ARRAYID}.txt

# Save the CPU cache sizes to a file for each node
./get_cache.sh ./output/cache_${PBS_ARRAYID}_${PBS_NODEFILE##*/}.txt
